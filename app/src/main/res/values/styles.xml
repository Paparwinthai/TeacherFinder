<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:textAppearance">@style/AppTheme.Body2</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialog</item>
    </style>

    <style name="AppTheme.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/kanit_medium</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textAppearance">@font/kanit_semibold</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="subtitleTextStyle">@style/AppTheme.ActionBar.SubtitleText</item>

    </style>
    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/kanit_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AppTheme.ActionBar.SubtitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:fontFamily">@font/kanit</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="AppTheme.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="AppTheme.Header" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
